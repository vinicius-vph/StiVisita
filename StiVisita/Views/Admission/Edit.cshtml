@model StiVisita.Models.Admission

@{
    ViewData["Title"] = "Editar Admissão";
}

<div class="my-5">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-7 mx-auto my-0 border border-3 rounded-3 border-light">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-4">
                <label asp-for="EntryDate" class="control-label my-2 fw-bold"></label>
                <input asp-for="EntryDate" class="form-control" />
                <span asp-validation-for="EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <label asp-for="Observation" class="control-label my-2 fw-bold"></label>
                <textarea asp-for="Observation" class="form-control" rows="3" cols="60" maxlength="180"></textarea>
                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>
            <div class="form-group my-5">
                <input type="submit" value="Atualizar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
